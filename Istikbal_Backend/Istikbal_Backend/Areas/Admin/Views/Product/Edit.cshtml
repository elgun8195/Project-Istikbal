@model Product
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    List<CategoryIn> categoryins = (List<CategoryIn>)ViewBag.CategoryIns;
    List<Category> categories = (List<Category>)ViewBag.Categories;

}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <form class="forms-sample" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label asp-for="Photo">Photo</label>
                                <input asp-for="Photo" class="form-control" placeholder="Photo">
                            </div>
                            <div class="form-group">
                                <label asp-for="Name">Name</label>
                                <input asp-for="Name" class="form-control" placeholder="Name">
                            </div>
                            <div class="form-group">
                                <label asp-for="Description">Description</label>
                                <input asp-for="Description" class="form-control" placeholder="Description">
                            </div>
                            <div class="form-group">
                                <label asp-for="Price">Price</label>
                                <input asp-for="Price" class="form-control" placeholder="Price">
                            </div>
                            <div class="form-group">
                                <label asp-for="Count">Count</label>
                                <input asp-for="Count" class="form-control" placeholder="Count">
                            </div>
                            <div class="mb-3">
                                <label asp-for="@Model.CategoryIds" class="form-label">Categories</label>
                                <select asp-for="@Model.CategoryIds" class="form-select">
                                    @foreach (var category in ViewBag.Categories)
                                    {
                                        if (Model.ProductCategories.FirstOrDefault(fc => fc.CategoryId == category.Id) != null)
                                        {
                                            <option value="@category.Id" selected>@category.Name</option>
                                        }
                                        else
                                        {
                                            <option value="@category.Id">@category.Name</option>

                                        }
                                    }
                                </select>
                                <span class="mt-2 text text-danger" asp-validation-for="@Model.CategoryIds"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="@Model.CategoryInIds" class="form-label">Dest</label>
                                <select asp-for="@Model.CategoryInIds" class="form-select">
                                    @foreach (var categoryin in ViewBag.CategoryIns)
                                    {
                                        if (Model.ProductCategorIns.FirstOrDefault(fc => fc.CategoryInId == categoryin.Id) != null)
                                        {
                                            <option value="@categoryin.Id" selected>@categoryin.Name</option>
                                        }
                                        else
                                        {
                                            <option value="@categoryin.Id">@categoryin.Name</option>

                                        }
                                    }
                                </select>
                                <span class="mt-2 text text-danger" asp-validation-for="@Model.CategoryInIds"></span>
                            </div>

                            <button type="submit" class="btn btn-primary mr-2">Submit</button>
                            <a asp-area="admin" asp-controller="product" asp-action="index" class="btn btn-light">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>