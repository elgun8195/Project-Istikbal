@model Bio
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<a asp-controller="bio" asp-action="create" class="btn btn-success">Create</a>
@if (Model!=null)
{
    
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Phone
                                </th>
                                <th>
                                    Email
                                </th>
                                <th>
                                    Facebook
                                </th>
                                <th>
                                    Youtube
                                </th>
                                <th>
                                    Instagram
                                </th>
                                 <th>
                                    Delete
                                </th>
                                <th>
                                    Edit
                                </th>
                            </tr>
                        </thead>
                        <tbody>

                            <tr>
                               
                                <td>
                                    @Model.Phone
                                </td>
                                <td>
                                    @Model.Email
                                </td>
                                <td>
                                    @Model.Facebook
                                </td>
                                <td>
                                    @Model.Youtube
                                </td>
                                <td>
                                    @Model.İnstagram
                                </td>
                                <td>
                                    <a asp-controller="bio" asp-action="delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>

                                </td>
                                <td>
                                    <a asp-controller="bio" asp-action="edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
                                </td>

                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
}