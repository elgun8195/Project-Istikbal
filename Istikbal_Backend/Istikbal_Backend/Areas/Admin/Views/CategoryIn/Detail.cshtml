@model CategoryIn
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<a asp-controller="CategoryIn" asp-action="create" class="btn btn-success">Create</a>

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Photo
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Updated time
                                </th>
                                <th>
                                    Delete
                                </th>
                                <th>
                                    Edit
                                </th>
                                <th>
                                    #
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            

                                <tr>
                                    <td class="py-1">
                                        <img src="~/assets/img/Category/@Model.ImageUrl" alt="image" />
                                    </td>
                                    <td>
                                        @Model.Name
                                    </td>
                                    <td>
                                        @Model.UpdatedTime.ToString("dd MM yyyy mm : ss")
                                    </td>
                                    <td>
                                        <a asp-controller="CategoryIn" asp-action="delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>

                                    </td>
                                    <td>
                                        <a asp-controller="CategoryIn" asp-action="edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
                                    </td>
                                    <td>
                                        <a asp-controller="CategoryIn" asp-action="index"   class="btn btn-success">Cancel</a>

                                    </td>
                                </tr>
                         
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>