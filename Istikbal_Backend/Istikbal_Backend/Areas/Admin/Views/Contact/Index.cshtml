@model List<Contact>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
} 
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Name
                                </th>
                                <th>
                                Email
                                </th>
                                <th>
                                    Created time
                                </th>
                                <th>
                                    Filial
                                </th> 
                                <th>
                                    Detail
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {

                                <tr>

                                    <td class="py-1">
                                        @item.Name
                                    </td>
                                    <td class="py-1">
                                        @item.Email
                                    </td>
                                    <td>
                                        @item.Date.ToString("dd MM yyyy mm : ss")
                                    </td>
                                    <td class="py-1">
                                        @item.Filial
                                    </td>
                                    <td>
                                        <a asp-controller="contact" asp-action="detail" asp-route-id="@item.Id" class="btn btn-success">Detail</a>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>